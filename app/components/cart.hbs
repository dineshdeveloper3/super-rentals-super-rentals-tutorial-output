<article class="rental">
  <Rental::Image src={{@cart.image}} alt="A picture of {{@cart.title}}" />

  <div class="details">
    <h3>
      <LinkTo @route="rental" @model={{@cart}}>
        {{@cart.title}}
      </LinkTo>
    </h3>
    <div class="detail owner">
      <span>Owner:</span> {{@cart.owner}}
    </div>
    <div class="detail type">
      <span>Type:</span> {{@cart.type}}
    </div>
    <div class="detail location">
      <span>Location:</span> {{@cart.city}}
    </div>
    <div class="detail bedrooms">
      <span>Number of bedrooms:</span> {{@cart.bedrooms}}
    </div>
    <div class="detail nightlyrate">
      <span>Nightly Rate:</span> {{format-currency @cart.nightlyrate}}
    </div>
    <div class="detail quantity">
      <span>Quantity:</span> {{@cart.quantity}}
    </div>
    <div class="detail price">
      <span>Price:</span> {{format-currency @cart.total}}
    </div>
  </div>

</article>